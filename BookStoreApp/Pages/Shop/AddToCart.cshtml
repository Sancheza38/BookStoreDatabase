@page
@model BookStoreApp.Pages.Shop.AddCartModel

@{
    ViewData["Title"] = "AddToCartItem";
}

<h1>Add to Cart</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderItem.ItemPrice" class="control-label"></label>
                <input asp-for="OrderItem.ItemPrice" class="form-control" />
                <span asp-validation-for="OrderItem.ItemPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="OrderItem.ISBN" class="control-label"></label>
                <input asp-for="OrderItem.ISBN" class="form-control" />
                <span asp-validation-for="OrderItem.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
