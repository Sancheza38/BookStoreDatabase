@page
@model BookStoreApp.Pages.Cart.AddOrderModel

@{
    ViewData["Title"] = "Add Order";
}

<h1>Place Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderID" />
            <div class="form-group">
                <label asp-for="Order.OrderValue" class="control-label"></label>
                <input asp-for="Order.OrderValue" class="form-control" />
                <span asp-validation-for="Order.OrderValue" value="@Model.Order.OrderValue"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" value="@Model.Order.OrderDate"class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Order.CustomerID" class="form-control"/>
                <span asp-validation-for="Order.CustomerID" c value="@Model.Order.CustomerID" lass="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
